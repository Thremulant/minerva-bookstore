<div class="col mt-0 mb-4">
  <a href="<%= book_path(book) %>" class="link-dark">
    <div class="card" >
      <div class="mv-cover-img">
        <% if book.image != '' %>
          <%= image_tag book.image, :class => 'img-fluid' %>
        <% else %>
          <%= image_tag ("/images/no_cover.jpg"), :class => 'img-fluid' %>
        <% end %>
      </div>
      <div class="card-body">
        <div class='d-flex flex-row flex-nowrap'>
          <% if !@book.genre.nil? then%><span class="badge rounded-pill bg-primary me-2"><%= @book.genre.name %></span><%end%>
          <% if @book.new then %><span class="badge rounded-pill bg-warning">NEW</span><%end%>
        </div>
        <h5 class="card-title"><%= book.name %></h5>
      </div>
    </div>
  </a>
</div>
